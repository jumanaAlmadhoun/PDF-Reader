  <h1 class="card-title">ðŸ“„ Upload New PDF</h1>
  
  <%= form_with model: @document, local: true do |form| %>
    <% if @document.errors.any? %>
      <div class="error-messages">
        <% @document.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :title, "Document Title" %>
      <%= form.text_field :title, placeholder: "Enter a descriptive title" %>
    </div>

    <div class="form-group">
      <%= form.label :pdf_file, "PDF File" %>
      <%= form.file_field :pdf_file, accept: "application/pdf" %>
    </div>

    <%= form.submit "ðŸš€ Upload Document", class: "btn btn-primary" %>
  <% end %>
  
  <div class="nav-links">
